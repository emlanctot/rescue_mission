<p id="notice"><%= notice %></p>
<%= link_to 'Back', questions_path %>
<p>
  <strong>Title:</strong>
  <%= @question.title %>

</p>

<p>
  <strong>Description:</strong>
  <%= @question.description %>
</p>

<h3>Answers:</h3>
<p>
  <% @answers.each do |answer| %>
    <tr>
      <td><%= answer.description %></td>
    </tr>
  <% end %>

</p>


<h5>New Answer:</h5>

<%= form_for(@answer) do |f| %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
